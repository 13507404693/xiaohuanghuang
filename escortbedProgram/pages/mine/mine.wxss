/* pages/mine/mine.wxss */
.user{
  overflow: hidden;
  position: relative;
  border-bottom: 1rpx solid #d1d1d1;
}
.avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  overflow: hidden;
  margin: 50rpx auto 20rpx;
  box-shadow: 0 0 20rpx 4rpx #4ab134;
}
.name{
  text-align: center;
  color: #212121;
  font-size: 32rpx;
}
.btn-mini{
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background: #4ab134;
  border-radius: 50rpx;
  margin: 20rpx auto 26rpx;
}
.help{
  position: absolute;
  background: #fedf10;
  color: #fff;
  font-size: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
  right: 0;
  padding: 0 10rpx 0 30rpx;
  top: 110rpx;
}
.help::before{
  content: "?";
  display: block;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  color: #fff;
  border-radius: 100%;
  background: #f2d304;
  left: -24rpx;
  font-size: 32rpx;
}
.menu .line{
  display: flex;
  justify-content: space-around;
  padding: 0 80rpx;
}
.menu .line .item{
  width: 50%;
  font-size: 30rpx;
  color: #212121;
  text-align: center;
}
.menu .line .item image{
  display: block;
  width: 140rpx;
  margin: 60rpx auto 10rpx;
}